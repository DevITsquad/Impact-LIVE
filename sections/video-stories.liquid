<script>
    let close_btn = document.querySelector('.video-stories__modal-close');
    let main_video = document.querySelector('.modal__video');
    let video_modal = document.querySelector('.video-stories__modal');
    let stories = document.querySelectorAll('.content__item');

    const toggleModal = e => {
        if (e.target.closest('.video-stories__modal-close') || e.which == '27' || e.target.closest('.video-stories__modal')) {
            main_video && main_video.pause();
            video_modal.classList.remove('active');
            document.body.style.overflow = 'unset';
        }else{
            let video_src = e.target.closest('.content__item')?.dataset.videoSrc;
            video_modal.classList.add('active');
            main_video.src = video_src;
            //block scroll
            document.body.style.overflow = 'hidden';
        }
    }

    close_btn.addEventListener('click', toggleModal);
    stories.forEach(el => el.addEventListener('click', toggleModal));
    document.querySelectorAll('.video-stories__modal')?.forEach(modal => {
        modal.addEventListener('click', (event) => !event.target.closest('.modal__video') && toggleModal(event));
    })
</script>
